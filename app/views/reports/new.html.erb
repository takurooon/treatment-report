<div class="d-flex align-items-center">
  <h1>投稿</h1>
  <div class="ml-auto posts_button">
      <%= link_to "レポート一覧", reports_path, class:"btn btn-outline-info" %>
  </div>
</div>
<%= form_with(model: @report, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :how_manieth_fertility_treatments, '投稿者名' %>
    <%= f.text_field :how_manieth_fertility_treatments, class: 'form-control' %>
    <small id="poster-tip" class="form-text text-muted">
        あなたの名前を入力してください。
    </small>
  </div>
  <%= f.submit '投稿', class: 'btn btn-info btn-block' %>
  <small id="submit-tip" class="form-text text-muted">
      投稿する前に投稿内容を見直してください!
  </small>
<% end %>